<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"


        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="DELIVERY"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/login_title"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"

                android:visibility="gone"
                android:gravity="center"

                android:textColor="#fff"
                android:textSize="26sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#EBD174"

                    android:textSize="18dp"
                    android:text="SHIPPING"/>
                <RadioGroup
                    android:id="@+id/radiogroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#000"
                    android:padding="10dp"

                    >


                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     android:textColor="#fff"
                        android:buttonTint="#EBD174"
                        android:text="  PICK FROM SHOP" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:buttonTint="#EBD174"
                        android:text="  DELIVERY" />


                </RadioGroup>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#EBD174"

                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:text="DISCOUNT VOUCHER"/>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText

                        android:id="@+id/ed_vochercode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:backgroundTint="#fff"
                        android:hint="Voucher Code"
                        android:inputType="textCapCharacters"
                        android:paddingBottom="16dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="#fff"

                        android:textColorHint="#fff" />

                    <Button

                        android:id="@+id/btn_readeem"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"




                        android:text=" REDEEM "
                        android:textColor="#fff"




                        android:background="@drawable/rounded_border_btn"
                        android:tint="@android:color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"

                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"


                        android:textSize="18dp"
                        android:text="SHIPPING CHARGE"/>
                    <TextView
                        android:id="@+id/txt_shippingcharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"

                       android:gravity="end"
                        android:textSize="18dp"
                        android:text="AED 0.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"


                        android:textSize="18dp"
                        android:text="SUB TOTAL"/>
                    <TextView
                        android:id="@+id/txt_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"

                        android:gravity="end"
                        android:textSize="18dp"
                        android:text="AED 0.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"

                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"


                        android:textSize="18dp"
                        android:text="DISCOUNT"/>
                    <TextView
                        android:id="@+id/txt_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"

                        android:gravity="end"
                        android:textSize="18dp"
                        android:text="AED 0.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"

                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"


                        android:textSize="18dp"
                        android:text="TOTAL"/>
                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#EBD174"

                        android:gravity="end"
                        android:textSize="18dp"
                        android:text="AED 0.0"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#EBD174"

                    android:layout_marginTop="15dp"
                    android:textSize="18dp"
                    android:text="PAYMENT METHOD"/>
                <RadioGroup
                    android:id="@+id/radiogroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#000"
                    android:padding="10dp"

                    >


                    <RadioButton
                        android:id="@+id/radio_cardpayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:buttonTint="#EBD174"
                        android:text="  CARD PAYMENT ON DELIVERY" />

                    <RadioButton
                        android:id="@+id/radioonlinepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:buttonTint="#EBD174"
                        android:text="  ONLINE PAYMENT" />


                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:layout_weight="1"
                android:gravity="bottom|center">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:background="#FF2600"

                    android:gravity="center"
                    android:text="PLACE ORDER"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>