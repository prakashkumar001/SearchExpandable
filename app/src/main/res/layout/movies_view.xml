<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="fill_parent"


    android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bglistitem"
        android:layout_height="200dp">
    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_gravity="center"

        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        android:layout_height="130dp"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_height="match_parent">
            <LinearLayout

                android:id="@+id/linear_hideval"
                android:layout_width="wrap_content"
                android:orientation="horizontal"


                android:layout_gravity="end"
                android:visibility="gone"

                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/minus_meal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/iconsminus64"
                    android:gravity="center"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/plus_meal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="3dp"
                   android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:src="@mipmap/iconsplus64"
                   />

            </LinearLayout>



        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
            android:background="#72000000"
    android:orientation="horizontal"
android:padding="5dp"
    android:weightSum="3"

   >
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:layout_weight="2.1"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textColor="#fff"
        android:textSize="15dp"/>

        <TextView android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="test"
            android:textColor="#fff"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".9"


        android:layout_gravity="center"

        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:visibility="invisible"
            android:text=" 1 * "
            android:fontFamily="@font/a_love_of_thunder"

            android:textColor="#fff"
            android:id="@+id/quantity"/>
        <TextView
            android:id="@+id/txt_price"
            android:text="AED"
            android:textColor="#fff"
            android:layout_width="wrap_content"

            android:fontFamily="@font/a_love_of_thunder"
            android:layout_height="wrap_content" />

    </LinearLayout>
        </LinearLayout>

</LinearLayout>
    </FrameLayout>
</FrameLayout>